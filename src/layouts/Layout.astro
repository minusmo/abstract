---
import '@tune-up-studio/figures/css/designtokens.css'
interface Props {
	title: string;
}

const { title } = Astro.props;
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="It's about HoJoon Eum!" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link rel="icon" type="image/png" href="/abstract/hjeum_profile.png" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Condensed:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
	</head>
	<body class="noto-sans">
		<slot />
	</body>
</html>

<style is:global>
  .noto-sans {
    font-family: "Noto Sans", sans-serif;
    font-optical-sizing: auto;
    font-weight: 400;
    font-style: normal;
    font-variation-settings: "wdth" 100;
  }
  .roboto-condensed {
    font-family: "Roboto Condensed", sans-serif;
    font-optical-sizing: auto;
    font-weight: 400;
    font-style: normal;
  }
  * {
    box-sizing: border-box;
    list-style: none;
  }
	html {
    --light-bg: var(--Tints-neutral-0);
    --dark-bg: var(--Tints-neutral-9);
    --light-color-normal: var(--Palette-neutral-0);
    --dark-color-normal: var(--Palette-neutral-5);
    --h1-fontsize: calc(var(--TypoScaleMap-PerfectFourth)*2.5rem);
    --h2-fontsize: calc(var(--TypoScaleMap-PerfectFourth)*2rem);
    --h3-fontsize: calc(var(--TypoScaleMap-PerfectFourth)*1.5rem);
    --h4-fontsize: calc(var(--TypoScaleMap-PerfectFourth)*1.25rem);
    --h5-fontsize: calc(var(--TypoScaleMap-PerfectFourth)*1.1rem);
    --p-fontsize: calc(var(--TypoScaleMap-PerfectFourth)*1rem);
    font-family: system-ui, sans-serif;
		background: #ffffff0a;
	}
  body {
    color-scheme: light dark;
    margin: 1px;
  }
  @media (prefers-color-scheme: light) {
    body {
      background-color: var(--light-bg);
      color: var(--light-color-normal);
    }
  }
  @media (prefers-color-scheme: dark) {
    body {
      background-color: var(--dark-bg);
      color: var(--dark-color-normal);
    }
  }
  main {
    padding: 10px;
  }
  section {
    margin: 10px 0;
    padding: 10px;
    box-shadow: 0 4px 4px 1px var(--Tints-neutral-1);
    border-radius: calc(var(--Curve-Lighter)*1px);
  }
  article {
    margin: 5px 0;
  }
  h1 {
    font-size: var(--h1-fontsize);
  }
  h2 {
    font-size: var(--h2-fontsize);
    margin: 5px;
  }
  h3 {
    font-size: var(--h3-fontsize);
  }
  h4 {
    font-size: var(--h4-fontsize);
  }
  h5 {
    font-size: var(--h5-fontsize);
  }
  p {
    font-size: var(--p-fontsize);
  }
  a {
   text-decoration: none;
   font-style: italic;
   font-weight: 600;
   color: var(--Color-BLUE);
  }
  a:hover {
    color: var(--Tints-blue-3);
    text-decoration: underline;
  }
  .bold {
    font-weight: bold;
  }
  .declaration {
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
  }
  .fn {
    font-weight: bolder;
  }
  .and-operator {
    font-weight: lighter;
    font-style: italic;
    margin: 0 5px;
  }
  .fullscreen-centered {
    width: 100vw;
    height: 100vh;
    display: grid;
    place-items: center;
  }
</style>
