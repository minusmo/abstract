---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Description of HoJoon Eum" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/hjeum_profile.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
	:root {
    --link-color: hsl(24, 100%, 50%);
	}
	html {
		font-family: system-ui, sans-serif;
		background: #ffffff0a;
	}
  body {
    margin: 1px;
  }
  * {
    box-sizing: border-box;
    list-style: none;
  }
  main {
    padding: 10px;
  }
  section {
    margin: 10px 0;
    padding: 10px;
    box-shadow: 3px 3px 3px rgba(0,0,0,.5);
    border-radius: 5px;
  }
  article {
    margin: 5px 0;
  }
  h2 {
    margin: 5px;
  }
  h3 {
    font-size: 1.2rem;
  }
  h4 {
    font-size: 1.1rem;
  }
  a {
   text-decoration: none;
   font-style: italic;
   font-weight: bold;
   color: var(--link-color);
  }
  .fn {
    font-weight: bolder;
  }
  .andOp {
    font-weight: lighter;
    font-style: italic;
    margin: 0 5px;
  }
</style>
