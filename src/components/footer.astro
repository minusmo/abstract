---
import contact from "../data/contact.json";
---
<footer id="contact">
    <a href=`mailto:${contact.email}`><p>e-mail</p></a>
    <a href={contact.linkedIn}><p>linkedIn</p></a>
    <a href={contact.github}><p>github</p></a>
</footer>

<style>
  #contact {
    display: flex;
    flex-flow: row;
    gap: 5px;
    width: 100%;
    height: auto;
    border-top: 1px solid rgba(0,0,0,.2);
    padding: 1rem;
    box-shadow: inset 3px 3px 3px rgba(0,0,0,.5);
    border-radius: 5px;
  }
  #contact a {
    text-decoration: none;
  }
</style>