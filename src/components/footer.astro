---
import contact from "../data/contact.json";
---
<footer id="contact">
  <p class="fn">Contacts(</p>
  <a href=`mailto:${contact.email}`><p>e-mail</p></a>
  <p>,</p>
  <a href={contact.linkedIn}><p>linkedIn</p></a>
  <p>,</p>
  <a href={contact.github}><p>github</p></a>
  <p>)</p>
</footer>

<style>
  #contact {
    display: flex;
    flex-flow: row;
    gap: 5px;
    width: 100%;
    height: auto;
    border-top: 1px solid rgba(0,0,0,.2);
    padding: 1rem;
    box-shadow: inset 2px 2px 2px rgba(0,0,0,.3);
    border-radius: 5px;
  }
  #contact a {
    text-decoration: none;
  }
</style>